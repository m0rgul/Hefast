<!DOCTYPE html>
<html lang="en">

<head>
    <% include template/head.ejs %>

    <% include template/jsdefaults.ejs %>
    <script src="/js/angular/factory/nav/nav.js"></script>
    <script src="/js/angular/factory/mainPage/mainPage.js"></script>
</head>

<body ng-app="factoryMainPage">
<div class="container-fluid" ng-controller="factoryMainPageController" ng-cloak>
    <div class="jumbotron">
        <h1>Wellcome to {{factoryInfo.factoryName}}</h1>

        <div class="jumboRoundImage">
            <img ng-src="{{factoryInfo.logo | randomSrc}}" class="headerImg">
        </div>

        <p>{{factoryInfo.description}}</p>

        <a ng-href="" class="btn-lg btn-success orderBtn" role="button" data-toggle="modal" data-target="#myModal">Place
            an order</a>
    </div>

    <div id="machines" ng-if="factoryInfo.machines">
        <h2>Our printers</h2>

        <div class="row">
            <div class="col-sm-6 col-md-4 machine" ng-repeat="machine in factoryInfo.machines">
                <div class="thumbnail">
                    <div class="imageContainer">
                        <img ng-src="{{machine.image | randomSrc}}"
                             alt="{{machine.name}}">
                    </div>

                    <div class="caption">
                        <h3>{{machine.name}}</h3>
                        <p>{{machine.description}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="materials" ng-if="factoryInfo.materials">
        <h2>Our materials</h2>


        <div class="media col-md-4 material" ng-repeat="material in factoryInfo.materials">
            <div class="media-left">
                <img ng-src="{{material.image | randomSrc}}"
                     alt="{{material.name}}">
            </div>
            <div class="media-body">
                <h4 class="media-heading">{{material.name}}</h4>

                <p>{{material.description}}</p>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">New User</h4>
            </div>
            <div class="modal-body text-center">
                <h2>Hello and welcome to our factory!</h2>
                <p class="lead text-justify">
                    In order to place an order with us, you need to register an account with us.
                    <br/>
                    Click <a href="/registerUser">here</a> to go to the registration page.
                </p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<% include template/footer.ejs %>

</body>
</html>